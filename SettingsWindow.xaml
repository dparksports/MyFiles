<Window x:Class="FileLister.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Privacy Settings" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="1">
            <CheckBox x:Name="AnalyticsCheckbox" 
                      Content="Share anonymous usage data" 
                      IsChecked="{Binding IsAnalyticsEnabled}"
                      Checked="AnalyticsCheckbox_Changed"
                      Unchecked="AnalyticsCheckbox_Changed"/>
            <TextBlock Text="Help us improve by sending anonymous usage statistics and crash reports. No personal data is collected." 
                       TextWrapping="Wrap" Foreground="Gray" FontSize="11" Margin="20,5,0,0"/>
        </StackPanel>

        <TextBlock Grid.Row="2" Text="Installation ID:" Margin="0,20,0,0" Foreground="Gray"/>
        <TextBox Grid.Row="2" x:Name="InstallIdText" IsReadOnly="True" Background="Transparent" BorderThickness="0" Margin="0,40,0,0" Foreground="Gray"/>

        <Button Grid.Row="3" Content="Close" Width="80" Height="25" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>
