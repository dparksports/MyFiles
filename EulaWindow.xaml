<Window x:Class="FileLister.EulaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="License Agreement" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Please read and accept the End User License Agreement to continue." 
                   FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>

        <ScrollViewer Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Padding="10">
            <TextBlock x:Name="EulaText" TextWrapping="Wrap" />
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Decline" Width="100" Height="30" Margin="0,0,10,0" Click="Decline_Click"/>
            <Button Content="I Agree" Width="100" Height="30" Click="Accept_Click" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
