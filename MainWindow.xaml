<Window x:Class="FileLister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Lister Utility" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Select Drives to Scan:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListView x:Name="DrivesList" Grid.Row="1" Margin="0,0,0,10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
            <Button x:Name="ScanButton" Content="Scan Selected Drives" Padding="10,5" Click="ScanButton_Click" Margin="0,0,10,0"/>
            <Button x:Name="ChecksumButton" Content="Calculate SHA256" Padding="10,5" Click="ChecksumButton_Click" Margin="0,0,10,0" IsEnabled="False"/>
            <Button x:Name="SaveButton" Content="Save Scan List" Padding="10,5" Click="SaveButton_Click" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <ProgressBar x:Name="ScanProgressBar" Height="20" Margin="0,0,0,5"/>
            <TextBlock x:Name="StatusText" Text="Ready"/>
        </StackPanel>
    </Grid>
</Window>
