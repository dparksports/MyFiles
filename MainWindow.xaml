<Window x:Class="FileLister.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FileLister"
        Title="MyFiles" Height="650" Width="900"
        Closing="Window_Closing">
    <Grid Margin="10">
        <TabControl>
            <TabItem Header="Scan &amp; Create">
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Drive Selection Sidebar -->
                    <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,1,0" Margin="0,0,0,0">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Drive Selection" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <Separator Background="{StaticResource BorderBrush}"/> 
                            </StackPanel>

                            <ListView x:Name="DrivesList" Grid.Row="1" BorderThickness="0" Background="Transparent">
                                <ListView.ItemContainerStyle>
                                    <Style TargetType="ListViewItem">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="BorderThickness" Value="0"/>
                                        <Setter Property="Margin" Value="0,2"/>
                                        <Setter Property="Padding" Value="5"/>
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="ListViewItem">
                                                    <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" TargetName="Bd" Value="#F5F5F5"/>
                                                        </Trigger>
                                                        <Trigger Property="IsSelected" Value="True">
                                                            <Setter Property="Background" TargetName="Bd" Value="#EBF3FB"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListView.ItemContainerStyle>
                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <!-- Drive Icon (Simple Path) -->
                                            <Viewbox Width="16" Height="16" Margin="0,0,10,0">
                                                <Path Data="M3,3H21A2,2 0 0,1 23,5V19A2,2 0 0,1 21,21H3A2,2 0 0,1 1,19V5A2,2 0 0,1 3,3M3,5V19H21V5H3M5,15H19V17H5V15M5,11H19V13H5V11M5,7H9V9H5V7Z" Fill="#555555"/>
                                            </Viewbox>
                                            <TextBlock Text="{Binding DisplayName}" VerticalAlignment="Center" FontSize="14"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <!-- Action Area -->
                    <Grid Grid.Column="1" Background="{StaticResource WindowBackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Top Actions -->
                        <StackPanel Orientation="Horizontal" Margin="20,20,20,10">
                            <Button x:Name="ScanButton" Content="Scan Selected Drives" Style="{StaticResource PrimaryButtonStyle}" Click="ScanButton_Click" Margin="0,0,10,0"/>
                            <Button x:Name="ChecksumControlButton" Content="Pause Calculation" Style="{StaticResource SecondaryButtonStyle}" Click="ChecksumControlButton_Click" IsEnabled="False"/>
                        </StackPanel>

                        <!-- Main Content Area (Empty for now, possibly for logs or detailed status later) -->
                        <Border Grid.Row="1" Margin="20,10,20,10" Background="White" CornerRadius="8" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                             <TextBlock Text="" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#AAAAAA" FontSize="16"/>
                        </Border>

                        <!-- Bottom Progress -->
                        <StackPanel Grid.Row="2" Margin="20,10,20,20">
                            <ProgressBar x:Name="ScanProgressBar" Height="25" Margin="0,0,0,10" Foreground="{StaticResource PrimaryBlueBrush}" Background="White" BorderBrush="{StaticResource BorderBrush}"/>
                            <DockPanel>
                                <TextBlock x:Name="StatusText" Text="Ready" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock x:Name="RamUsageText" Text="RAM: 0 MB" HorizontalAlignment="Right" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </DockPanel>
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>
            
            <TabItem Header="Compare Scans">
                <!-- Simple Mode View -->
                <local:ComparisonView x:Name="SimpleView" Margin="5"/>
            </TabItem>

            <TabItem Header="Compare Checksums">
                <!-- Checksum Mode View -->
                <local:ComparisonView x:Name="ChecksumView" Margin="5"/>
            </TabItem>

            <TabItem Header="Settings">
                <Grid Margin="10">
                    <StackPanel>
                        <GroupBox Header="General Settings" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="StartupCheckbox" 
                                          Content="Start automatically on login" 
                                          Checked="StartupCheckbox_Changed"
                                          Unchecked="StartupCheckbox_Changed"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Performance Settings" Margin="0,0,0,10">
                            <StackPanel Margin="10">
                                <StackPanel Margin="0,0,0,10">
                                    <TextBlock Text="Scan Progress Refresh Rate (Files):" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="RefreshRateInput" Width="100" Text="10000" TextChanged="RefreshRateInput_TextChanged" Margin="0,0,10,0"/>
                                        <TextBlock Text="(Update UI every N files found)" VerticalAlignment="Center" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                                <StackPanel>
                                    <TextBlock Text="Checksum Progress Refresh Rate (Files):" Margin="0,0,0,5"/>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox x:Name="ChecksumRateInput" Width="100" Text="100" TextChanged="ChecksumRateInput_TextChanged" Margin="0,0,10,0"/>
                                        <TextBlock Text="(Update UI every N files hashed)" VerticalAlignment="Center" Foreground="Gray"/>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Privacy Settings">
                            <StackPanel Margin="10">
                                <CheckBox x:Name="AnalyticsCheckbox" 
                                          Content="Share anonymous usage data" 
                                          IsChecked="{Binding IsAnalyticsEnabled}"
                                          Checked="AnalyticsCheckbox_Changed"
                                          Unchecked="AnalyticsCheckbox_Changed"/>
                                <TextBlock Text="Help us improve by sending anonymous usage statistics. No personal data is collected." 
                                           TextWrapping="Wrap" Foreground="Gray" FontSize="11" Margin="20,5,0,0"/>
                                
                                <TextBlock Text="Installation ID:" Margin="0,15,0,0" Foreground="Gray"/>
                                <TextBox x:Name="InstallIdText" IsReadOnly="True" Background="Transparent" BorderThickness="0" Foreground="Gray"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
